<%= form_with(model: user) do |form| %>
  
  <% if user.errors.any? %>
    <div style="color: red">
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email, class: "form-control", placeholder: "Email" %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>

  <div>
    <%= form.label :confirm_password, style: "display: block" %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
  </div>

  <div>
    <%= form.label :role, style: "display: block" %>
    <%= form.select :role, User.roles.map{|k,v| [k]}, {prompt: "Please select"} , class: "dropdown-item"  %>
  </div>
  
  <br>
  <div>
    <%= form.button class:"btn btn-success" %>
  </div>

<% end %>
