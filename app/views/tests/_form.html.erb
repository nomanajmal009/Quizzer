<%= form_with(model: test) do |form| %>
  <% if test.errors.any? %>
    <div style="color: red">

      <ul>
        <% test.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, style: "display: block"%>
    <%= form.text_field :name, class: "form-control", placeholder: "Name"  %>
  </div>

  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Description"   %>
  </div>
  <br>
  <hr>
  

  <h3>Add Questions</h3>
  <%= form.fields_for (:questions) do |question| %>
      <%= render 'question_fields', f: question%>

    <%= question.fields_for (:options) do |option| %>
      <%= render 'option_fields', f: option%>
    <% end %>
  <% end %>
      <div class="links">
        <%= link_to_add_association "Add Question", form, :questions %>
        <%= link_to_add_association "Add Option", form, :options %>
      </div>
  

  <div>
    <%= form.button class: "btn btn-success" %>
  </div>

<% end %>