<%= form_with(model: test) do |form| %>
  <% if test.errors.any? %>
    <div style="color: red">

      <ul>
        <% test.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control", placeholder: "Name"  %>
  </div>

    <div class="form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class: "form-control", placeholder: "Description" %>
  </div>


    <br>
  <div>
    <%= form.button class: "btn btn-success" %>
  </div>
<% end %>
